<!DOCTYPE html>
<html lang="en">
    <%- include('partials/_header') -%>
    <body id="page-top">
        <!-- Navigation-->
        <%- include('partials/_addNav') -%>
<body>
    <section>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="text-center p-3">
                        <h3> Add Photo </h3>
                    </div>
                    <form method="POST" action="/photos" encType="multipart/form-data">
                      <div class="mb-3">
                          <label for="exampleFormControlInput1" class="form-label"> Photo Title </label>
                          <input type="text" name="title" class="form-control" id="exampleFormControlInput1" placeholder="Write Here" required>
                        </div>
                        <div class="mb-3">
                          <label for="exampleFormControlTextarea1" class="form-label">Example textarea</label>
                          <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="8" required></textarea>
                        </div>
                        <div class="mb-3">
                          <label for="formFile" class="form-label"> Upload Your Image </label>
                          <input name="image" class="form-control" type="file" id="formFile">
                        </div>
                        <div class="text-center">
                          <button class="btn btn-primary mb-3" type="submit"> Send </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    
</body>
</html>